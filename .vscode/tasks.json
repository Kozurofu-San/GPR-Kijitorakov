{
    "version": "2.0.0",
    "tasks": [
        {
            "label": "Build",
            "type": "shell",
            "presentation": {
                "clear": true
            },
            "group": {
                "kind": "build",
                "isDefault": true
            },
            "command": "./.vscode/build.ps1",
            "args": [
                "-config",
                "Debug"
            ],
            "options": {
                "cwd": "${workspaceRoot}",
                "statusbar": {
                    "color" : "#1da628",
                    "detail" : "Build sources and subprojects",
                    "label" : "$(layers) Debug",
                    "hide" : false
                }
            },
        },
        {
            "label": "Delete",
            "type": "shell",
            "presentation": {
                "clear": true
            },
            "group": "build",
            "command": "./delete.ps1",
            "options": {
                "cwd": "${workspaceRoot}/.vscode",
                "statusbar": {
                    "color" : "#1da628",
                    "detail" : "Delete builded files and downloaded repo",
                    "label" : "$(trash) Delete",
                    "hide" : false
                }
            }
        },
    ]
}