<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <fragment
        android:id="@+id/plot1"
        android:name="com.example.plot.graphics.PlotFragment"
        android:layout_width="match_parent"
        android:layout_height="250dp"
        app:layout_constraintTop_toBottomOf="@+id/plot2"
        tools:layout="@layout/fragment_plot" />

    <fragment
        android:id="@+id/plot2"
        android:name="com.example.plot.graphics.PlotFragment"
        android:layout_width="match_parent"
        android:layout_height="250dp"
        android:layout_above="@+id/plot1"
        android:layout_alignParentTop="true"
        app:layout_constraintTop_toBottomOf="@+id/waterfall1"
        app:layout_constraintTop_toTopOf="parent"
        tools:layout="@layout/fragment_plot" />

    <fragment
        android:id="@+id/waterfall1"
        android:name="com.example.plot.graphics.WaterfallFragment"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_above="@+id/plot2"
        android:layout_alignParentTop="true"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/plot1"
        tools:layout="@layout/fragment_watefall"
        tools:layout_editor_absoluteX="53dp" />

    <ImageButton
        android:id="@+id/imageButtonPlay"
        android:layout_width="48dp"
        android:layout_height="48dp"
        android:layout_marginBottom="300dp"
        android:background="@drawable/button_round"
        android:contentDescription="TODO"
        android:onClick="playPause"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="@+id/imageButtonSettings"
        app:srcCompat="@drawable/ic_play" />

    <ImageButton
        android:id="@+id/imageButtonSettings"
        android:layout_width="48dp"
        android:layout_height="48dp"
        android:layout_marginEnd="20dp"
        android:layout_marginBottom="50dp"
        android:background="@drawable/button_round"
        android:contentDescription="TODO"
        android:onClick="toSettingsActivity"
        app:layout_constraintBottom_toTopOf="@+id/imageButtonPlay"
        app:layout_constraintEnd_toEndOf="parent"
        app:srcCompat="@drawable/ic_settings" />

</androidx.constraintlayout.widget.ConstraintLayout>